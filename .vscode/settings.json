{
  "cSpell.language": "en-GB",
  "cSpell.words": ["clearable", "Formik", "ilike", "singularize", "upsert", "upserted"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.experimental.useFlatConfig": true,
  "eslint.lintTask.enable": true,
  "json.schemas": [
    {
      "fileMatch": ["*.hl7.json"],
      "url": "./packages/central-server/__tests__/hl7fhir/fhir.schema.json"
    }
  ],
  "search.exclude": {
    "**/.next": true,
    "**/build": true,
    "**/dist": true,
    "**/node_modules": true
  },
  "yaml.schemas": {
    "https://www.artillery.io/schema.json": [
      "packages/synthetic-tests/src/config/*.yml",
      "packages/synthetic-tests/src/scenarios/*.yml",
      "packages/synthetic-tests/src/merged-scenarios.yml"
    ]
  }
}
