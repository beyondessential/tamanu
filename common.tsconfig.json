{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "erasableSyntaxOnly": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "ignoreDeprecations": "5.0",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "module": "ES2022",
    "lib": ["es2022"],
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022"
  },
  "exclude": [
    "build",
    "dist",
    "jest.config.js",
    "node_modules"
  ]
}
