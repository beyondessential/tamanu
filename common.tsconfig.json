{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "ignoreDeprecations": "5.0",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "module": "ES2020",
    "lib": ["es2020"],
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": [
    "build", 
    "dist", 
    "jest.config.js", 
    "node_modules"
  ]
}
