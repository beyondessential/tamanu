{
  "name": "tamanu",
  "version": "1.0.0",
  "description": "This repo contains all the packages for Tamanu",
  "main": "index.js",
  "repository": "git@github.com:beyondessential/tamanu.git",
  "author": "Salman Amjad",
  "license": "MIT",
  "scripts": {
    "lint-all": "eslint packages/desktop/app packages/server/app packages/lan/app packages/shared/schemas packages/shared/services packages/shared/constants packages/shared/utils",
    "upgrade-lint-rules": "yarn workspaces run upgrade @beyondessential/eslint-config-beyondessential --latest"
  },
  "engines": {
    "node": ">=8.3",
    "yarn": ">=1.2"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/scripts",
      "packages/desktop",
      "packages/lan",
      "packages/server",
      "packages/shared"
    ],
    "nohoist": [
      "**/webpack",
      "**/webpack/**",
      "**/fbjs-scripts",
      "**/fbjs-scripts/**",
      "**/electron",
      "**/electron/**",
      "**/electron-*",
      "**/electron-*/**",
      "**/config",
      "**/config/**"
    ]
  },
  "devDependencies": {}
}
