:3000 {
	root * /app
	encode zstd gzip
	log {
		output stderr
	}

	file_server {
		precompressed zstd br gzip
	}

	reverse_proxy {
    to localhost:5173
    copy *
  }

	handle_errors {
		@custom_err file /resources/errors/{err.status_code}.html
		handle @custom_err {
			rewrite * {file_match.relative}
			file_server
		}
	}
}
