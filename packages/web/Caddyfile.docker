:3000 {
	root * /app
	log {
		output stderr
	}

	encode zstd gzip
	file_server {
		precompressed zstd br gzip
	}

	header / Cache-Control no-cache
	header /manifest.json Cache-Control no-cache

	handle_errors {
		@custom_err file /resources/errors/{err.status_code}.html
		handle @custom_err {
			rewrite * {file_match.relative}
			file_server
		}
	}
}
