{
  "name": "lan",
  "version": "1.0.0",
  "description": "Lan server for Tamanu desktop app",
  "main": "NODE_ENV='development' index.js",
  "bin": "index.js",
  "pkg": {
    "assets": [
      "../shared/**/*",
      "config",
      "node_modules/config"
    ]
  },
  "scripts": {
    "start": "pm2 start pm2.json && pm2 logs tamanu-lan",
    "restart": "pm2 restart tamanu-lan & pm2 logs tamanu-lan",
    "stop": "pm2 stop tamanu-lan",
    "start-dev": "nodemon index",
    "build": "pkg . --targets node10-win-x64 --output ./release/server.exe",
    "package": "./scripts/package.sh"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:beyondessential/tamanu-desktop.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://github.com/beyondessential/tamanu-desktop.git#readme",
  "devDependencies": {
    "@beyondessential/eslint-config-beyondessential": "*",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "grunt": "^1.0.2",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-notify": "^0.4.5",
    "grunt-sass": "^2.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.3",
    "pkg": "^4.3.4",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@beyondessential/eslint-config-beyondessential": "^2.2",
    "@casl/ability": "^2.5.1",
    "await-to-js": "^2.0.1",
    "basic-auth": "^2.0.1",
    "bcrypt": "^3.0.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "config": "^3.0.1",
    "connect-flash": "^0.1.1",
    "cross-var": "^1.1.0",
