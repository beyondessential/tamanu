{
  "name": "lan",
  "version": "1.0.0",
  "description": "Lan server for Tamanu desktop app",
  "main": "NODE_ENV='development' index.js",
  "bin": "index.js",
  "pkg": {
    "scripts": "../../shared/**/*.js",
    "output": "./release/tamanu-lan-server"
  },
  "scripts": {
    "start": "NODE_ENV='development' nodemon index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "npm test -- --watch",
    "fix-build": "rm ./node_modules/pouchdb-fauxton/www/index.html || true",
    "package": "pkg .  --targets node8-x64 --out-path ./release/",
    "package:tonga": "yarn fix-build && cp ./config/tonga.js ./config.js && yarn package && rm ./config.js",
    "package:demo": "yarn fix-build && cp ./config/demo.js ./config.js && yarn package && rm ./config.js",
    "package:win": "pkg . --targets node8-win-x64 --out-path ./release/",
    "package:mac": "pkg . --targets node8-macos-x64 --out-path ./release/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:beyondessential/tamanu-desktop.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://github.com/beyondessential/tamanu-desktop.git#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "grunt": "^1.0.2",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-notify": "^0.4.5",
    "grunt-sass": "^2.1.0",
    "mocha": "^5.2.0",
    "pkg": "^4.3.4",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "await-to-js": "^2.0.1",
    "bcrypt": "^3.0.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "connect-flash": "^0.1.1",
    "cross-var": "^1.1.0",
    "express": "^4.16.2",
    "express-basic-auth": "^1.1.5",
    "express-session": "^1.15.6",
    "express-validator": "^5.1.0",
    "faye": "^1.2.4",
    "follow": "^1.1.0",
    "json-prune": "^1.1.0",
    "lodash": "^4.17.5",
    "moment": "^2.21.0",
    "morgan": "^1.9.0",
    "nano": "^6.4.4",
    "os-service": "^2.1.3",
    "pouchdb": "^7.0.0",
    "pouchdb-find": "^7.0.0",
    "prompt": "^1.0.0",
    "realm": "^2.17.0",
    "request": "^2.88.0",
    "shortid": "^2.2.13",
    "uuid": "^3.3.2"
  }
}
