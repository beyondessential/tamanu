    "follow": "^1.1.0",
    "json-prune": "^1.1.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.5",
    "moment": "^2.21.0",
    "morgan": "^1.9.0",
    "node-schedule": "^1.3.2",
    "os-service": "^2.1.3",
    "prompts": "^2.0.0",
    "realm": "^2.17.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "shortid": "^2.2.13",
    "uuid": "^3.3.2"
  }
