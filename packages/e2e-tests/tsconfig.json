{
  "extends": "../../common.tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tamanu/*": ["../../packages/*/src"],
      "@fixtures/*": ["fixtures/*"],
      "@utils/*": ["utils/*"],
      "@pages/*": ["pages/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
