{
  "name": "@tamanu/simulator",
  "version": "1.30.0",
  "private": true,
  "description": "Simulation tooling to generate lots of fake data for testing",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "src/index.ts",
  "homepage": "https://github.com/beyondessential/tamanu.git#readme",
  "repository": "git@github.com:beyondessential/tamanu.git",
  "author": "Beyond Essential Systems Pty. Ltd.",
  "license": "SEE LICENSE IN ../../license",
  "scripts": {
    "build": "yarn run build:src && yarn run build:types",
    "build:src": "swc --delete-dir-on-start --out-dir dist --copy-files --source-maps true src",
    "build:types": "tsc --declaration --emitDeclarationOnly --noEmit false && move-dts src dist",
    "build-watch": "yarn run build && yarn run build:src --watch",
    "start": "node dist/index.js",
    "start-inspect": "node inspect dist/index.js",
    "test": "echo no tests yet",
    "lint": "yarn run lint:check && yarn run lint:types",
    "lint:check": "rome check src",
    "lint:types": "tsc",
    "lint:fix": "rome check src --apply-unsafe",
    "fmt": "rome format src --write"
  },
  "devDependencies": {
    "@tamanu/build-tooling": "*",
    "@types/chance": "^1.1.3",
    "@types/node": "^18.14.6"
  },
  "dependencies": {
    "@tamanu/api-client": "*",
    "chance": "^1.1.11",
    "date-fns": "^2.30.0",
    "undici": "^5.22.1"
  }
}
