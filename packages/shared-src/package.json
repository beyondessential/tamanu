{
  "name": "shared-src",
  "version": "1.24.0",
  "description": "Common code across Tamanu packages",
  "main": "index.js",
  "homepage": "https://github.com/beyondessential/tamanu.git#readme",
  "repository": "git@github.com:beyondessential/tamanu.git",
  "author": "Beyond Essential Systems Pty. Ltd.",
  "license": "SEE LICENSE IN license",
  "scripts": {
    "clean": "rm -rf ../shared",
    "prepare": "mkdir -p ../shared && cp -n shared.package.json ../shared/package.json || true",
    "compile": "yarn run prepare && npx swc --only '.js' src -d ../shared",
    "build": "yarn run clean && yarn run compile",
    "build-watch": "yarn run compile --watch",
    "test": "NODE_ENV=test jest",
    "test-coverage": "yarn test --coverage",
    "lint": "eslint src",
    "lint-stats": "eslint src --format ../scripts/eslint-stats.js"
  },
  "private": true,
  "devDependencies": {
    "@beyondessential/eslint-config-js": "^1.1.0",
    "@swc/core": "^1.3.21",
    "@swc/jest": "^0.2.23",
    "@swc/cli": "^0.1.57",
    "eslint": "^5.15.2",
    "jest": "^29.3.1",
    "sinon": "^11.1.2",
    "swc-loader": "^0.2.3"
  },
  "dependencies": {
    "@casl/ability": "^4.1.0",
    "@react-pdf/renderer": "^2.1.1",
    "await-to-js": "^2.0.1",
    "bcrypt": "^3.0.1",
    "calculate-luhn-mod-n": "^2.0.12",
    "chance": "^1.1.8",
    "config": "3.0.1",
    "date-fns": "^2.19.0",
    "date-fns-tz": "^1.3.6",
    "eslint": "^5.15.2",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "moment-timezone": "^0.5.34",
    "multiparty": "^4.2.3",
    "node-schedule": "^2.0.0",
    "semver-compare": "^1.0.0",
    "semver-diff": "^3.1.1",
    "shortid": "^2.2.14",
    "tiny-async-pool": "^1.2.0"
  }
}
