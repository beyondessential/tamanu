{
  "name": "bes-qr-tester",
  "version": "1.0.0",
  "description": "BES QR Code Tester App / Website",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "build": "mkdir -p www/vendor && npm run build:koder && npm run build:zschema",
    "build:koder": "cp ../../node_modules/@maslick/koder/{zbar.{js,wasm},browser.js} www/vendor/",
    "build:zschema": "cp ../../node_modules/z-schema/dist/ZSchema-browser-min.js{,.map} www/vendor/",
    "start": "node serve.js",
    "pkg": "pkg --compress Brotli package.json"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "http-server": "^14.1.0",
    "opener": "^1.5.2"
  },
  "devDependencies": {
    "@maslick/koder": "^1.3.1",
    "pkg": "^5.5.2",
    "z-schema": "^5.0.2"
  },
  "bin": "serve.js",
  "pkg": {
    "scripts": "serve.js",
    "assets": "www/**/*",
    "targets": [
      "node12-linuxstatic-x64",
      "node12-macos-x64",
      "node12-windows-x64"
    ],
    "outputPath": "build"
  }
}
