{
  "name": "bes-qr-tester",
  "version": "1.0.0",
  "description": "BES QR Code Tester App / Website",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "build": "mkdir -p www/koder; cp node_modules/@maslick/koder/{zbar.{js,wasm},browser.js} www/koder/",
    "start": "node serve.js",
    "pkg": "pkg --compress Brotli package.json"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "http-server": "^14.1.0",
    "opener": "^1.5.2"
  },
  "devDependencies": {
    "@maslick/koder": "^1.3.1",
    "pkg": "^5.5.2"
  },
  "bin": "serve.js",
  "pkg": {
    "scripts": "serve.js",
    "assets": "www/**/*",
    "targets": [
      "latest-linuxstatic-x64",
      "latest-macos-x64",
      "latest-windows-x64"
    ],
    "outputPath": "build"
  }
}
