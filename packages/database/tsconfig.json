{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "moduleResolution": "bundler",
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./dist",
    "removeComments": false,
    "resolveJsonModule": true,
    "strict": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "verbatimModuleSyntax": true,
    "lib": ["es2021"]
  },
  "extends": "../../common.tsconfig.json",
  "include": ["src/**/*.ts", "__test__/**/*.test.ts", "src/models/User.js", "src/models/SyncSession.js", "src/models/ScheduledVaccine.js", "src/models/ReferenceData.js", "src/models/Patient.js", "src/models/LocationGroup.js", "src/models/Location.js", "src/models/Encounter.js", "src/models/Department.js"],
  "exclude": ["**/*.test.ts"]
}
