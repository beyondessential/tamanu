{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["../../common.tsconfig.json"],
  "include": [
    "package.json",
    "src/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "target": "es2020"
  }
}
